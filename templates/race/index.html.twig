<h1>Race</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for race in races %}
        <tr>
            <td>{{ race.name }}</td>
            <td>{{ race.date ? race.date|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <a href="{{ path('race_show', {'id': race.id}) }}">show</a>
                <a href="{{ path('race_edit', {'id': race.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('race_new') }}">Create new</a>
