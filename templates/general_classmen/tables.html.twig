{% set rankingData = generalRanking(id) %}
<h2>General</h2>
<table class="table table-striped">
    <tbody>
    <tr>
        <th>Best Driver</th>
        <td>{{ rankingData.bestDriver }}</td>
    </tr>
    <tr>
        <th>Best Team</th>
        <td>{{ rankingData.bestTeam }}</td>
    </tr>
    <tr>
        <th>Best Maker</th>
        <td>{{ rankingData.bestMaker }}</td>
    </tr>
    <tr>
        <th>Best Driver Progression</th>
        <td>{{ rankingData.bestDriverProgression }}</td>
    </tr>
    <tr>
        <th>Best Team Progression</th>
        <td>{{ rankingData.bestTeamProgression }} </td>
    </tr>
    </tbody>
</table>
<h2>Driver Ranking</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Rank</th>
        <th>Driver</th>
        <th>Number</th>
        <th>Team</th>
        <th>Pool</th>
        <th>Time</th>
    </tr>
    </thead>
    <tbody>
    {% for driver in rankingData.generalRanking %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ driver.driver }}</td>
            <td>{% if driver.driver.number matches '/^\\d+$/' %}#{{ driver.driver.number }}{% endif %}</td>
            <td>{{ driver.driver.team }}</td>
            <td>{{ driver.driver.pool }}</td>
            <td>{{ driver.totalTime }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<h2>Team Ranking</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Rank</th>
        <th>Team</th>
        <th>Time</th>
    </tr>
    </thead>
    <tbody>
    {% for team, data in rankingData.teamRanking %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ team }}</td>
            <td>{{ data.totalTimeFactorized }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<h2>Maker Ranking</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Rank</th>
        <th>Maker</th>
    </tr>
    </thead>
    <tbody>
    {% for maker, points in rankingData.makerRanking %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ maker }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>