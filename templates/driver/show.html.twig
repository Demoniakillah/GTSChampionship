{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
    <h1>Driver</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Psn</th>
                <td>{{ driver.psn }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ driver.name }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{% if driver.team is not null %}{{ driver.team.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Pool</th>
                <td>{% if driver.pool is not null %}{{ driver.pool.name }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('driver_index') }}">back to list</a>

    <a href="{{ path('driver_edit', {'id': driver.id}) }}">edit</a>

    {{ include('driver/_delete_form.html.twig') }}
{% endblock %}
